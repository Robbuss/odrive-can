{
    "private": true,
    "devDependencies": {
      "concurrently": "^9.0.0"
    },
    "scripts": {
        "setup:backend": "python3 -m venv backend/.venv && backend/.venv/bin/pip install -U pip fastapi uvicorn",
    
        "backend:openapi": "backend/.venv/bin/python -m backend.scripts.write_openapi",
    
        "frontend:codegen": "npm --prefix frontend run openapi",
    
        "backend:serve": "backend/.venv/bin/uvicorn backend.main:app --reload --port 8000",
        "frontend:dev": "npm --prefix frontend run dev",
    
        "predev": "npm run backend:openapi && npm run frontend:codegen",
        "dev": "concurrently -k -n backend,frontend \"npm:backend:serve\" \"npm:frontend:dev\""
      }
  }